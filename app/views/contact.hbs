<section class="content-cnt">
    <div id="contact-form" class="content">
        <div>
            <form action="/contact/" method="post" style="display:{% if emailSent %}none{% else %}block{% endif %};">
                {% csrf_token %}
                {% for field in contactForm %}
                    {{ field.errors }}
                    {{ field }}
                {% endfor %}
                <input type="submit" value="Submit" />
            </form>
            <div class="thank-you" style="display:{% if emailSent %}block{% else %}none{% endif %}">
                <h1>Thank you,</h1><br />
                <h2>Here at Troy Blank Labs we love the emails.</h2>
            </div>
            <div class="error" style="display:{% if emailSent %}block{% else %}none{% endif %}">
                <h1>We are sorry,</h1><br />
                <h2>There was something wrong and your email could not be sent at this time.</h2>
            </div>
        </div>
    </div>
</section>